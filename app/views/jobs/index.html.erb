<div class="col-md-12">
  <div class="group">
    <%= link_to("新增职缺", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>职缺</td>
        <td>类型</td>
        <td>薪资</td>
        <td>公司</td>
        <td>地点</td>
        <td>联系方式</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td>#</td>
        <td><%= job.name %></td>
        <td><%= job.category %></td>
        <td><%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %></td>
        <td><%= job.company %></td>
        <td><%= job.location %></td>
        <td><%= job.contact_mail %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
