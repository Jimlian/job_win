<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>职缺</td>
        <td>类型</td>
        <td>薪资</td>
        <td>公司</td>
        <td>地点</td>
        <td>联系方式</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td>#</td>
        <td><%= link_to(job.name, job_path(job)) %></td>
        <td><%= job.category %></td>
        <td><%= job.wage_lower_bound %> K ~ <%= job.wage_upper_bound %> K</td>
        <td><%= job.company %></td>
        <td><%= job.location %></td>
        <td><%= job.contact_mail %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
