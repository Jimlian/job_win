<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for @job do |f| %>
    <div class="form-group">
      <%= f.input :name, input_html: { class: "form-control"} %>
      <%= f.input :content, input_html: { class: "form-control"} %>
      <%= f.input :company, input_html: { class: "form-control"} %>
      <%= f.input :category, input_html: { class: "form-control"} %>
      <%= f.input :location, input_html: { class: "form-control"} %>
      <%= f.input :wage_lower_bound, input_html: { class: "form-control"} %>
      <%= f.input :wage_upper_bound, input_html: { class: "form-control"} %>
      <%= f.input :contact_mail, input_html: { class: "form-control"} %>
    </div>
    <div class="form-actions text-center">
      <%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
